" This is for number line and Animation
set number
set relativenumber

" This is for the smart bar in under section
set laststatus=2

" This is for smart tab and backing
filetype plugin indent on
set expandtab
set shiftwidth=4
set softtabstop=4
set tabstop=4
set smartindent

set backspace=indent,eol,start

" This is for syntax highlighting
syntax on
